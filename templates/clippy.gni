template("run_clippy") {
  forward_variables_from(invoker, "*")
  not_needed("*")

  action(target_name) {
    invoker_deps = invoker.deps
    invoker_dep = invoker_deps[0]

    target_name = get_label_info(invoker_dep, "name")
    target_out_dir = get_label_info(invoker_dep, "target_out_dir")
    clippy_rspfile = "${target_out_dir}/${target_name}.clippy_rsp"

    script = "//build/scripts/run_clippy.py"
    inputs = [ clippy_rspfile ]
    outputs = [ "${target_out_dir}/${target_name}.stamp" ]

    args = [ rebase_path(clippy_rspfile) ]
  }
}
