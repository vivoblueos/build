import("//build/default_targets.gni")
import("//build/templates/board.gni")
import("//build/templates/linker_script.gni")

_sysroot = exec_script("//build/scripts/get_sysroot.py",
                       [ "arm-none-eabi-gcc" ],
                       "string")

generate_linker("default_linker_script") {
  preprocesser = "arm-none-eabi-cpp"
  template = "//kernel/arch/arm/cortex_m/link.x"
  output = "${target_gen_dir}/link.pre.ld"
}

blueos_board("qemu_mps2_an385") {
  kernel_config = {
    _linker_script = rebase_path("${target_gen_dir}/link.pre.ld")
    cflags = [
      "--target=thumbv7m-none-eabi",
      "--static",
      "-fshort-enums",
      "-fsigned-char",
      "-nostdlib",
      "-isystem",
      "${_sysroot}/include",
    ]
    ldflags = [
      "-nostartfiles",
      "-Wl,-gc-sections",
      "-Wl,-T" + rebase_path(_linker_script),
      "-Wl,-z,norelro",
    ]
    rustflags = [
      "--cfg",
      "target_board=\"qemu_mps2_an385\"",
      "--cfg",
      "cortex_m",
      "--cfg",
      "armv7m",
      "-Zemit-stack-sizes",
      "-Crelocation-model=static",
      "-Clinker=arm-none-eabi-gcc",
    ]
    foreach(item, ldflags) {
      rustflags += [ "-Clink-arg=${item}" ]
    }
    inputs = [ _linker_script ]
  }
  app_config = {
    rustflags = [
      "-Clinker=clang",
      "-Clink-arg=-fuse-ld=lld",
      "-Clink-arg=--target=thumbv7m-none-eabi",
      "-Clink-arg=-Wl,-z,norelro",
    ]
  }
  default = [
    "//apps/example:check_apps",
    "//apps/shell:shell_runner",
  ]
  check_all = default + check_all_on_virtual_board + clippy_all_on_virtual_board
  check_all += [ "//kernel/adapter/cmsis:run_adapter_validation" ]
  check_all += [ "//kernel/adapter/thread_metric:run_tests" ]
}
