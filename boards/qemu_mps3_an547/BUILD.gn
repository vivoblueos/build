import("//build/default_targets.gni")
import("//build/templates/board.gni")

_sysroot = exec_script("//build/scripts/get_sysroot.py",
                       [ "arm-none-eabi-gcc" ],
                       "string")

blueos_board("qemu_mps3_an547") {
  kernel_config = {
    _linker_script = "//kernel/kernel/src/boards/${board}/link.x"
    cflags = [
      "--target=thumbv8m.main-none-eabihf",
      "--static",
      "-fshort-enums",
      "-fsigned-char",
      "-nostdlib",
      "-isystem",
      "${_sysroot}/include",
    ]
    ldflags = [
      "-nostartfiles",
      "-Wl,-gc-sections",
      "-Wl,-T" + rebase_path(_linker_script),
      "-Wl,-z,norelro",
    ]
    rustflags = [
      "--cfg",
      "target_board=\"qemu_mps3_an547\"",
      "--cfg",
      "cortex_m",
      "--cfg",
      "armv8m",
      "--cfg",
      "armv8m_main",
      "--cfg",
      "has_fpu",
      "-Zemit-stack-sizes",
      "-Crelocation-model=static",
      "-Clinker=arm-none-eabi-gcc",
    ]
    foreach(item, ldflags) {
      rustflags += [ "-Clink-arg=${item}" ]
    }
    inputs = [ _linker_script ]
  }
  app_config = {
    rustflags = [
      "-Clinker=clang",
      "-Clink-arg=-fuse-ld=lld",
      "-Clink-arg=--target=thumbv8m.main-none-eabihf",
      "-Clink-arg=-Wl,-z,norelro",
    ]
  }
  default = [
    "//apps/example:check_apps",
    "//apps/shell:shell_runner",
  ]
  check_all = check_all_on_virtual_board + clippy_all_on_virtual_board +
              [ "//apps/example:check_apps" ]
  run_metric_tests = []

  # FIXME: Enable thread_metric on this board. Currently, VFS is disabled on
  # this board, so that `printf` in libc is unavailable.  However, thread_metric
  # requires `printf`.
}
