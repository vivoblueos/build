import("//build/toolchain/blueos.gni")

# For consistency, we don't use lld or ld directly. All link processes are
# driven by clang or gcc, even we are using rustc to build executables.
blueos_toolchain("blueos_riscv64") {
  cc = "clang --target=riscv64"
  cxx = "clang++ --target=riscv64"
  ld = cc
  ar = "llvm-ar"
  objcopy = "llvm-objcopy"
  rustc = "rustc --target=riscv64-vivo-blueos"
  clippy_driver = "clippy-driver --target=riscv64-vivo-blueos"
  toolchain_args = {
    current_os = "blueos"
    current_cpu = "riscv64"
  }
}

# We still keep toolchains without the `blueos_` prefix since `blueos_*` toolchains
# are using different relocation models in their default configuration.
