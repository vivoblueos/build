  target = "thumbv7m-none-eabi"
  cc = "clang --target=${target}"
  cxx = "clang++ --target=${target}"
  ld = "arm-none-eabi-gcc"
  ar = "llvm-ar"
  objcopy = "llvm-objcopy"
  rustc = "rustc --target=${target}"
  clippy_driver = "clippy-driver --target=${target}"
  toolchain_args = {
    current_os = "none"
    current_cpu = "arm"
  }
}

